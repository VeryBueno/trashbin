{% extends "layout.html.twig" %}

{% block scripts %}
  {% if paste.language|default(null) %}
    <link rel="stylesheet" href="{{ base_path }}/shjs/sh_style.css" />
    <script src="{{ base_path }}/shjs/sh_main.min.js" type="text/javascript"></script>
    <script src="{{ base_path }}/shjs/lang/sh_{{ paste.language }}.min.js" type="text/javascript"></script>
    <script type="text/javascript">
    window.onload = function () {
      sh_highlightDocument();
    }
    </script>
  {% endif %}
{% endblock %}

{% block body %}

<h1>trashbin</h1>

<h2>view paste</h2>

<p>created on {{ paste.created_at|date }}</p>
<hr/>
<textarea class="sh_{{ paste.language|default('') }}">{{ paste.content }}</textarea>

<hr/>
<span><a href="{{ index_url }}">new paste</a></span>
<span><a href="{{ copy_url }}">copy</a></span>
<span><a href="/{{paste.id}}/delete">delete</a></span>

{% endblock %}
